<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete Appointment</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        .form-container {
            width: 50%;
            margin: auto;
            text-align: left;
        }
        .form-container label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }
        .form-container input, .form-container button {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            font-size: 16px;
        }
        .form-container button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }
        .form-container button:hover {
            background-color: #0056b3;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            width: 50%;
            text-align: center;
        }
        .modal-content h2 {
            margin-top: 0;
        }
        .modal-content button {
            width: auto;
            margin: 10px;
            background-color: #007bff;
        }
        .modal-content button:hover {
            background-color: #0056b3;
        }
        .close {
            color: red;
            font-size: 20px;
            font-weight: bold;
            position: absolute;
            top: 10px;
            right: 15px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Complete Appointment with @Model.Name</h1>
    <div class="form-container">
        <form action="AddDetails" id="appointmentForm">
            <input type="hidden" name="name" value="@Model.Id" />
            <label for="PatientName">Patient Name:</label>
            <input type="text" id="PatientName" name="patientName" required />

            <label for="AppointmentDate">Appointment Date:</label>
            <input type="date" id="AppointmentDate" name="date" required />

            <label for="AppointmentTime">Appointment Time:</label>
            <input type="time" id="AppointmentTime" name="time" required />

            <button type="submit" id="submitBtn">Complete Appointment</button>
        </form>
    </div>

    <!-- Modal Structure -->
    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeModal">&times;</span>
            <h2>Confirm Appointment</h2>
            <p>Appointment completed</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("confirmationModal");
            const submitBtn = document.getElementById("submitBtn");
            const closeModal = document.getElementById("closeModal");
            const form = document.getElementById("appointmentForm");

            // Open the modal
            submitBtn.addEventListener("click", function () {
                modal.style.display = "flex";
            });

            // Close the modal
            closeModal.addEventListener("click", function () {
                modal.style.display = "none";
            });

            cancelSubmit.addEventListener("click", function () {
                modal.style.display = "none";
            });

            // Confirm submission
            confirmSubmit.addEventListener("click", function () {
                modal.style.display = "none";
                form.submit(); // Submit the form
            });

            // Close modal when clicking outside of it
            window.addEventListener("click", function (event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
